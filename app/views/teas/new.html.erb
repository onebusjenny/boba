<h1>Customize your bubble tea</h1>
    
<%=form_for @tea, url: user_teas_path(current_user), method: :post do |f|%> 
<%=f.label(:name)%>
<%=f.text_field(:name)%><br>

<%=f.label(:flavor)%>
<%=f.text_field(:flavor)%><br>

<%=f.fields_for(:tea_ingredients) do |ff|%>
<%=ff.label(:ingredient) %>
<%=ff.select(:ingredient_id ,options_for_select(@ingredients.collect{ |i| [i.name, i.id] }), {:include_blank => 'select ingredient here'} )%>
<%=ff.label(:amount)%>
<%=ff.text_field(:amount)%><br>
<%end%>

<br>


  <%=f.submit "Create"%>
<%end%>









