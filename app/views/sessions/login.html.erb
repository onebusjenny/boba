<h1>Log In here</h1>
    
<% if @error%>
<%= @error%>
<% end %>

<%= form_tag login_path do %>
  <div class='field'>
    <%= text_field_tag :email, nil, placeholder: 'Email', required: true %><br />
  </div>
  <div class='field'>
    <%= password_field_tag :password, nil, placeholder: 'Password', required: true %><br />
  </div>
  <br />
  <div class='actions'>
    <%= submit_tag 'Log in' %>
  </div>
<% end %>
<p><%= link_to "Sign Up", signup_path %>